<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GraphSettingsActivity">

    <TextView
        android:id="@+id/textView3"
        style="@style/MyTextViewMainStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Начало по оси У:"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_settings_activity_y_start"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        style="@style/MyTextViewMainStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Конец по оси У:"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_settings_activity_y_end"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        style="@style/MyTextViewMainStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:text="Начало по оси X:"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_settings_activity_x_start"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        style="@style/MyTextViewMainStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="24dp"
        android:text="Конец по оси X:"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_settings_activity_x_end"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <CheckBox
        android:id="@+id/checkBox_settings_activity_enable_zooming"
        style="@style/MyTextViewMainStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Разрешить зуминг"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.678" />

    <EditText
        android:id="@+id/edit_text_settings_activity_x_start"
        style="@style/MyTextViewMainStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:minWidth="80dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.523" />

    <EditText
        android:id="@+id/edit_text_settings_activity_x_end"
        style="@style/MyTextViewMainStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:minWidth="80dp"
        android:text="1024"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.523" />

    <EditText
        android:id="@+id/edit_text_settings_activity_y_start"
        style="@style/MyTextViewMainStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:minWidth="80dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.523" />

    <EditText
        android:id="@+id/edit_text_settings_activity_y_end"
        style="@style/MyTextViewMainStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:minWidth="80dp"
        android:text="1500"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.523" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Настройки гистограммы"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="28sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_settings_activity_enable_scrolling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyTextViewMainStyle"
        android:text="Разрешить скролинг"
        android:layout_marginTop="10dp"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="@+id/checkBox_settings_activity_enable_zooming"
        app:layout_constraintStart_toStartOf="@+id/checkBox_settings_activity_enable_zooming"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_settings_activity_enable_zooming" />

    <Button
        android:id="@+id/button_settings_activity_confirm"
        style="@style/MyTextViewMainStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Подтвердить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_settings_activity_enable_zooming" />
</androidx.constraintlayout.widget.ConstraintLayout>